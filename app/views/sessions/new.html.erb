<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-body">
      <h2>Sign in</h2>
        <%= form_for :session, url: session_path do |form| %>
          <form role="form">
            <div class="form-group">
              <%= form.text_field :email, autofocus: "true", class: "form-control", placeholder: 'Enter your email',  required: "true" %> 
            </div>
            <div class="form-group">
              <%= form.password_field :password, class: "form-control", placeholder: 'Enter your password',  required: "true" %> 
            </div>
            <%= form.submit "Sign in", class: "btn btn-default" %>
          </form>
        <% end %>
      </div>
    </div>
  </div>
</div>