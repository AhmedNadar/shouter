
<div class="row">
<div class="col-md-6 col-md-offset-3 panel panel-default">
	<div class="panel-body">
		<h2>My Profile</h2>	
		<%= form_for @user do |f| %>
        <div class="form-group">
	        <div class="input-group">
						<span class="input-group-addon glyphicon glyphicon-user"></span>
	        	<%= f.text_field :username, autofocus: "true", class: "form-control", placeholder: 'Enter your username',  required: "true" %>   
	        </div>
        </div>
        <div class="form-group">
        	<div class="input-group">
						<span class="input-group-addon glyphicon glyphicon-envelope"></span>
          	<%= f.text_field :email, class: "form-control", placeholder: 'Enter your email',  required: "true" %> 
        	</div>
        </div>    
				<%= f.submit "Update!", class: 'btn btn-primary' %>  
				<ul class="list-group">
				  <li class="list-group-item">
				    <span class="badge"><%= @user.created_at.to_date.to_formatted_s(:long_ordinal) %></span>
				    Joined Date
				  </li>
				  <li class="list-group-item">
				    <span class="badge"><%= @user.updated_at.to_date.to_formatted_s(:long_ordinal) %></span>
				    Updated Date
				  </li>
				</ul>
				</div>
			<% end %>
			I have <strong><%= @user.shouts.size %></strong> shouts.<br>
		<%= render @shouts %>
		</div>
	</div>
</div>